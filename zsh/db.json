{
    "deps" : [
        {
            "pacman" : [
                "zsh",
                "zsh-completions",
                "vivid"
            ]
        },
        {
            "aur" : [
                {
                    "autojump" : "https://aur.archlinux.org/autojump-git.git"
                }
            ]
        }
    ],
    "links": [
        {
            "dest": "~/.zshrc",
            "name": ".zshrc"
        }
    ],
    "scripts" : [
        "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
        "sudo chsh -s $(which zsh) $(whoami)"
    ]
}
