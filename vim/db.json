{
    "deps" : [
        {
            "pacman" : [
                "neovim",
                "python-pynvim",
                "nodejs",
                "npm",
                "wl-clipboard"
            ]
        },
        {
            "pip" : [
                "neovim-remote"
            ]
        },
        {
            "aur" : [
                {
                    "neovide-git" : "https://aur.archlinux.org/neovide-git.git",
                    "neovim-gtk-git" : "https://aur.archlinux.org/neovim-gtk-git.git",
                    "waypipe-git": "https://aur.archlinux.org/waypipe-git.git"

                }
            ]
        }

    ],
    "links": [
        {
            "dest": "~/.config/nvim/nvim_config",
            "name": "nvim_config"
        },
        {
            "dest": "~/.config/nvim/coc-settings.json",
            "name": "coc-settings.json"
        }
    ],
    "scripts" : [
        "curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim",
        "mkdir -p ~/.config/nvim/undo ~/.config/nvim/swap",
        "./install_plugins.sh"
    ]
}
